# ~/.config/i3status/config

general {
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "battery all" # Only for laptops
order += "volume master"
order += "tztime local"

cpu_usage {
        format = "CPU %usage "
}

tztime local {
        format = "%d-%m-%Y %H:%M "
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

# Only for laptops
battery all {
    threshold_type = "time"
    integer_battery_capacity = "true"
    low_threshold = "15"
    format = "BAT %percentage "
}

