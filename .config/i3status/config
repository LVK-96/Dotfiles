# ~/.config/i3status/config

general {
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "ethernet _first_"
order += "volume master"
order += "tztime local"

ethernet  _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_up = "eth: %ip"
        format_down = "E: down"
}

cpu_usage {
        format = "CPU %usage "
}

tztime local {
        format = "%d-%m-%Y %H:%M "
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
